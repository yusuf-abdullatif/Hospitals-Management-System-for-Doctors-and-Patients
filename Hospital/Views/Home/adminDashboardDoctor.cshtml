
@model IEnumerable<Hospital.Models.database.doctor>
@{
    Layout = null;
    ViewBag.Title = "Admin Dashboard - Doctors";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.5">
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <title>@ViewBag.Title</title>
</head>

<!--Check if user is admin -->
@if (User.IsInRole("Admin"))
{
    <style>
        .dashboard-left {
            border: 1px solid black;
            float: left;
            float: left;
            flex: 20%;
            flex-direction: column;
            height: 1000px;
            width: auto;
            background-color: rgb(103, 189, 189);
            display: flex;
        }

        .dashboard-right {
            flex: 80%;
            flex-direction: column;
            float: right;
            height: auto;
            width: auto;
            background-color: rgba(153,203,255,0.5);
            height: 1000px;
        }

        table {
            border: 3px solid black;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: lightblue;
        }

        tr:nth-child(odd) {
            background-color: lightgray;
        }
    </style>
    <body>
        <div class="dashboard-container">
            <div class="dashboard-container">
                <div class="dashboard-container">
                    <div class="dashboard-left">
                        <div class="dashboard-left-top">
                            <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="avatar" width="50" height="50">
                            Welcome system administrator!
                            <div class="button-container ">
                                <button class="button-inner" onclick="location.href='@Url.Action("Index", "Home")'"> Log Out</button>
                            </div>
                        </div>
                        <div class="dashboard-left-bottom">
                            <div class="button-container ">
                                <button class="button-inner" onclick="location.href='@Url.Action("adminDashboardAppointments", "Home")'"> Edit Appointments</button>
                            </div>
                            <br /><br />
                            <div class="button-container ">
                                <button class="button-inner" onclick="location.href='@Url.Action("adminDashboardPatients", "Home")'">Edit Patient Information</button>
                            </div>
                            <br /><br />
                            <div class="button-container ">
                                <button class="button-inner" onclick="location.href='@Url.Action("adminDashboardDoctor", "Home")'"> Edit Doctors</button>
                            </div>
                            <br /><br />
                        </div>
                    </div>
                </div>


            </div>
            <div class="dashboard-right">
                <p>
                    @Html.ActionLink("Create New", "Create", "Doctor")
                </p>
                <table class="table" border="1px solid">
                    <tr>
                        <th>
                            Doctor ID
                        </th>
                        <th>
                            SSN
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            Hospital
                        </th>
                        <th>
                            Department
                        </th>
                        <th>
                            Position
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.doctorID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.ssn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.lastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.dOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.hospital)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => doctor.position)
                            </td>
                            <td>
                                <!-- Action links for Edit, Details, Delete -->
                                @Html.ActionLink("Edit", "Edit", "doctor", new { id = doctor.doctorID }) |
                                @Html.ActionLink("Details", "Details", "doctor", new { id = doctor.doctorID }) |
                                @Html.ActionLink("Delete", "Delete", "doctor", new { id = doctor.doctorID })

                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </body>
}
else
{
    <p>You are not authorized to view this page.</p>
}


