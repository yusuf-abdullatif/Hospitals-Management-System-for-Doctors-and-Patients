@model IEnumerable<Hospital.Models.database.patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Patient Dashboard</h2>

<table class="table">
    <tr>
        <th>
            Your SSN
        </th>
        <th>
            Your Date of Birth
        </th>
        <th>
            Your Name
        </th>
        <th>
            Your Surname
        </th>
        <th>
            Your Email
        </th>
        <th>
            Your Phone Number
        </th>
        <th>
            Your Blood Type
        </th>
        <th>
            Your Diagnoses
        </th>
        <th>
            Your Prescription
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ssn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bloodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diagnoses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prescription)
            </td>
            <td>
                @Html.ActionLink("Edit My Details", "Edit", new { id = item.patientID }) |
                @Html.ActionLink("Details My Details", "Details", new { id = item.patientID }) |
                @Html.ActionLink("Delete My Profile", "Delete", new { id = item.patientID })
            </td>
        </tr>
    }

</table>
