@model IEnumerable<Hospital.Models.database.appointment>
@{
    ViewBag.Title = "patientDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Doctorpage</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;
        }

        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 25%;
        }

        .text {
            font-size: 40px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }

            .text p {
                font-size: 20px;
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

            .table thead tr {
                background-color: #009879;
                color: #ffffff;
                text-align: left;
            }

            .table th,
            .table td {
                padding: 12px 15px;
            }

            .table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                /* Hover effect for rows */
                .table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .table tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                }

            /* Style for action links */
            .table td a {
                color: #009879;
                text-decoration: none;
                font-weight: bold;
            }

                .table td a:hover {
                    color: #005f4f;
                }
    </style>
</head>

<div class="dashboard-container">

    <div class="dashboard-right">
        <div class="dashboard-right-top">
            <div class="text">
                <b>Welcome!</b><br /><br />
                <p>Thank you for joining us.</p>

            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.doctorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.patientID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.hospitalName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.patientID == ViewBag.PatientID)
                {
                    {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doctorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.patientID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hospitalName)
                    </td>
                </tr>
                    }
                }
            }
        </table>
    </div>
</div>
