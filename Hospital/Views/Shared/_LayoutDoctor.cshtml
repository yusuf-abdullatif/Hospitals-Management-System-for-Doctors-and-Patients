<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.5">
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <title>@ViewBag.Title</title>

    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;
        }

        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 25%;
        }

        .text {
            font-size: 40px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }

            .text p {
                font-size: 20px;
            }

        .dashboard-left {
            border: 1px solid black;
            float: left;
            float: left;
            flex: 20%;
            flex-direction: column;
            height: 1000px;
            width: auto;
            background-color: rgba(103, 189, 189, 0.5);
            align-self: flex-start;
            display: flex;
        }

        .dashboard-right {
            flex: 80%;
            flex-direction: column;
            float: right;
            height: auto;
            width: auto;
            background-color: #0f0;
        }
    </style>
</head>


@RenderBody()
</html>
