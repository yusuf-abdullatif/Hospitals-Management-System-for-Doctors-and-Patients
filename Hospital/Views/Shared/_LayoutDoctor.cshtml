<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.5">
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <title>@ViewBag.Title</title>

    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;
        }

        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 25%;
        }

        .text {
            font-size: 40px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }

            .text p {
                font-size: 20px;
            }
    </style>
</head>


<body>

    <div class="dashboard-container">
        <div class="dashboard-left">
            <div class="dashboard-left-top">
                <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="avatar" width="50" height="50">

                <div id="doctor-info">
                    <script>
                        var doctorInfo = @Html.Raw(Json.Encode(ViewBag.CurrentDoctor));
                        if (doctorInfo) {
                            var elementdashboard = document.getElementById("doctor-info");
                            elementdashboard.innerHTML = "Doctor ID: " + doctorInfo.doctorID + "<br />" +
                                "Name: " + doctorInfo.name + "<br />" +
                                "Department: " + doctorInfo.department;
                        }
                    </script>



                    <div class="button-container ">
                        <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> Log Out</button>
                    </div>
                </div>
            </div>
            <div class="dashboard-left-bottom">
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> My information</button>
                </div>
                <br /><br />
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> Patient information</button>
                </div>
                <br /><br />
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> My Appointments</button>
                </div>
                <br /><br />

            </div>
        </div>


        @RenderBody()


    </div>
</body>
</html>
