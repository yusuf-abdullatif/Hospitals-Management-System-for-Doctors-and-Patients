
@{
    ViewBag.Title = "patient_info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>patient_info</h2>

@model IEnumerable<WebProject.Models.doctor>

<head>
    <title>Doctorpage</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;
        }

        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 25%;
        }

        .text {
            font-size: 20px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }

            .text p {
                font-size: 20px;
            }
    </style>
</head>

<div class="dashboard-container">

    <div class="dashboard-right">
        <div class="dashboard-right-top">
            <div class="text">
                <b>My Information</b><br /><br />
                <table>
                    @foreach (var patients in Model.Patient)
                    {
                        <tr>
                            <th>ID</th>
                            <td>@patients.patientID</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@patients.name</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>@patients.lastName</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@patients.dOfBirth</td>
                        </tr>
                        <tr>
                            <th>Hospital</th>
                            <td>@patients.hospital</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>@patients.department</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>@patients.position</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="dashboard-right-bottom">
            </div>
        </div>
    </div>

