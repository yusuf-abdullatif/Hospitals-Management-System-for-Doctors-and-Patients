@model IEnumerable<WebProject.Models.doctor>

<head>
    <title>Doctorpage</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;

        }
        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin:0 25%;

        }
        .text {
            font-size: 40px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }
        .text p{
            font-size:20px;
        }
    </style>
</head>

<div class="dashboard-container">
        <div class="dashboard-left">
            <div class="dashboard-left-top">
                <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="avatar" width="50" height="50">

                <div id="doctor-info">
                    <script>
                        var doctorname = "Baris Can Kara"; //placeholder
                        var patientname = "Patient";
                        var elementdashboard = document.getElementById("doctor-info");
                        elementdashboard.innerHTML = doctorname + "!";
                    </script>
                    <br /><span>example@email.com</span>

                    <div class="button-container ">
                        <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> Log Out</button>
                    </div>
                </div>
            </div>
            <div class="dashboard-left-bottom">
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> My information</button>
                </div>
                <br /><br />
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> Patient information</button>
                </div>
                <br /><br />
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> My Appointments</button>
                </div>
                <br /><br />
                <div class="button-container ">
                    <button class="button-inner" onclick="location.href='@Url.Action("Index","Home")'"> Return to Home page</button>
                </div>
            </div>
        </div>
        <div class="dashboard-right">
            <div class="dashboard-right-top">
                <div class="text">
                    <b>Welcome!</b><br /><br/>
                    <b>Doctor Baris Can Kara</b><br/><br />
                    <p>Thank for joining us.</p>
                </div>
            </div>
            <div class="dashboard-right-bottom">
                <div class="calendar-container">
                    <iframe src="https://calendar.google.com/calendar/embed?src=tr.turkish%23holiday%40group.v.calendar.google.com&ctz=Europe%2FIstanbul" style="border: 1px solid" width="700" height="600" frameborder="1" scrolling="no">
                    </iframe>
                </div>
            </div>
        </div>
</div>
