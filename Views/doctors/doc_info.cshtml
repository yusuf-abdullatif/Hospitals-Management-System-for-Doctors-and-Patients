@model IEnumerable<WebProject.Models.doctor>

<head>
    <title>Doctorpage</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="script.js" defer></script>
    <style>
        .layout_top_page_container {
            width: 100%;
            height: 1000px;
            flex-direction: column;
            background-size: cover;
        }

        .main-page-navbar {
            width: 1500px;
            height: 105px;
            display: flex;
            padding: 2em;
            max-width: 1500px;
            align-items: center;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 25%;
        }

        .text {
            font-size: 20px;
            font-family: "Courier New", Times, serif;
            color: #fff;
            text-align: center;
            padding-top: 20px;
        }

            .text p {
                font-size: 20px;
            }
    </style>
</head>

<div class="dashboard-container">

    <div class="dashboard-right">
        <div class="dashboard-right-top">
            <div class="text">
                <b>My Information</b><br /><br/>
                <table>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <th>ID</th>
                            <td>@doctor.doctorID</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@doctor.name</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>@doctor.lastName</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@doctor.dOfBirth</td>
                        </tr>
                        <tr>
                            <th>Hospital</th>
                            <td>@doctor.hospital</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>@doctor.department</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>@doctor.position</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="dashboard-right-bottom">
            <div class="calendar-container">
                <iframe src="https://calendar.google.com/calendar/embed?src=tr.turkish%23holiday%40group.v.calendar.google.com&ctz=Europe%2FIstanbul" style="border: 1px solid" width="700" height="600" frameborder="1" scrolling="no">
                </iframe>
            </div>
        </div>
    </div>
</div>
